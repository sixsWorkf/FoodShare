/*按钮*/

/*mask*/

.toast_mask {

  opacity: 0;

  width: 100%;

  height: 100%;

  overflow: hidden;

  position: fixed;

  top: 0;

  left: 0;

  z-index: 888;
  

}

/*toast*/

.toast_content_box {

  display: flex;

  width: 100%;

  height: 100%;

  justify-content: center;

  align-items: center;

  position: fixed;

  z-index: 999;

}

.toast_content {

  margin-top: 100%;
  width: 50%;
  height: 5%;
  opacity: 0.7;
  padding: 20rpx;

  background:rgb(255, 174, 0);

  border-radius: 20rpx;


}

.toast_content_text {

  height: 100%;

  width: 100%;

  color: #fff;

  font-size: 30rpx;

  text-align: center;

}




